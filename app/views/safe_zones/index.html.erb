<h1>Listing safe_zones</h1>

<table>
  <thead>
    <tr>
      <th>Location name</th>
      <th>Person name</th>
      <th>Address</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @safe_zones.each do |safe_zone| %>
      <tr>
        <td><%= safe_zone.location_name %></td>
        <td><%= safe_zone.person_name %></td>
        <td><%= safe_zone.address %></td>
        <td><%= safe_zone.latitude %></td>
        <td><%= safe_zone.longitude %></td>
        <td><%= link_to 'Show', safe_zone %></td>
        <td><%= link_to 'Edit', edit_safe_zone_path(safe_zone) %></td>
        <td><%= link_to 'Destroy', safe_zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Safe zone', new_safe_zone_path %>
